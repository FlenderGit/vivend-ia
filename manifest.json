{
  "manifest_version": 3,
  "name": "Vivend'ia",
  "version": "1.0",

  "description": "Test",

  "permissions": ["sidePanel"],

  "side_panel": {
    "default_path": "dist/index.html",
    "open_at_install": true
  },

  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*",
      "https://localhost:*/*"
    ]
  },

  "action": {
    "default_title": "Open Sidebar"
  },

  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Ouvrir le sidepanel"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}
